# Message Queue Worker Dockerfile
FROM golang:1.24-alpine AS builder

WORKDIR /app
RUN apk add --no-cache git ca-certificates

COPY go.mod go.sum* ./
RUN go mod download
COPY . .
RUN CGO_ENABLED=0 GOOS=linux go build -installsuffix cgo -o queue-worker ./cmd/worker

FROM alpine:3.19
WORKDIR /app
RUN apk --no-cache add ca-certificates tzdata
COPY --from=builder /app/queue-worker .
RUN adduser -D -g '' appuser
USER appuser

ENTRYPOINT ["./queue-worker"]
