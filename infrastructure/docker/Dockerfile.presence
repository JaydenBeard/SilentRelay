# Presence Service Dockerfile
FROM golang:1.24-alpine AS builder

WORKDIR /app
RUN apk add --no-cache git ca-certificates

COPY go.mod go.sum* ./
RUN go mod download
COPY . .
RUN CGO_ENABLED=0 GOOS=linux go build -installsuffix cgo -o presence-service ./cmd/presence

FROM alpine:3.19
WORKDIR /app
RUN apk --no-cache add ca-certificates tzdata
COPY --from=builder /app/presence-service .
RUN adduser -D -g '' appuser
USER appuser

EXPOSE 8081
ENTRYPOINT ["./presence-service"]
